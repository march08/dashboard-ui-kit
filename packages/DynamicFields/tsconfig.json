{
      "compilerOptions": {
        "outDir": "./lib",
        "target": "es5",
        "module": "commonjs",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "removeComments": true,
        "declaration": false,
        "sourceMap": true,
        "jsx": "react",
        "typeRoots": [
          "index.d.ts",
          "node_modules/@types"
        ]
      },
      "include": [
        "./src/**/*.tsx",
        "./src/**/*.ts"
      ],
      "exclude": [
        "node_modules"
      ]
}
